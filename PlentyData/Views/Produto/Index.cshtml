@model IEnumerable<PlentyData.Models.Produto>
@{
    ViewData["Title"] = "Produto";
}

<h5>@ViewData["Title"]</h5>
<h1></h1>
<p>Lista</p>
<p style="text-align:right">
    <a asp-action="Create" class="btn btn-info btn-sm">Cadastrar Produto</a>
</p>
<hr></hr>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th style ="text-align:center">
                @Html.DisplayName("Código")
            </th>
            <th>
                @Html.DisplayName("Descrição")
            </th>
            <th>
                @Html.DisplayName("Referência")
            </th>
            <th>
                @Html.DisplayName("EAN")
            </th>
            <th style="text-align:right">
                @Html.DisplayName("Valor Venda")
            </th>
            <th style="text-align:center">
                @Html.DisplayName("Ativo")
            </th>
            <th style="text-align:center">
                @Html.DisplayName("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gtin)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.ValorVenda)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td style="text-align:center">
                    <bottom><a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.Id">Editar</a></bottom>
                </td>
            </tr>
        }
    </tbody>
</table>


