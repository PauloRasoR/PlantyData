@model IEnumerable<PlentyData.Models.Produto>
@{
    ViewData["Title"] = "Produto";
}

<h3>@ViewData["Title"]</h3>
<h1></h1>
<h5>Lista</h5>
<hr></hr>
<p>
    <a asp-action="Create" class="btn btn-info btn-sm">Cadastrar Produto</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayName("Código")
            </th>
            <th>
                @Html.DisplayName("Nome")
            </th>
            <th>
                @Html.DisplayName("Referência")
            </th>
            <th>
                @Html.DisplayName("CodBar")
            </th>
            <th>
                @Html.DisplayName("NCM")
            </th>
            <th>
                @Html.DisplayName("Ativo")
            </th>
            <th>
                @Html.DisplayName("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gtin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ncm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <bottom><a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.Id">Editar</a></bottom>
                </td>
            </tr>
        }
    </tbody>



</table>


