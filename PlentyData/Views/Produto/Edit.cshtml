@model PlentyData.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<h3>Produto</h3>
<h6>Editar</h6>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeFiscal" class="control-label"></label>
                <input asp-for="NomeFiscal" class="form-control" />
                <span asp-validation-for="NomeFiscal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referencia" class="control-label"></label>
                <input asp-for="Referencia" class="form-control" />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ncm" class="control-label"></label>
                <input asp-for="Ncm" class="form-control" />
                <span asp-validation-for="Ncm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cest" class="control-label"></label>
                <input asp-for="Cest" class="form-control" />
                <span asp-validation-for="Cest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gtin" class="control-label"></label>
                <input asp-for="Gtin" class="form-control" />
                <span asp-validation-for="Gtin" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="SALVAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
