@model IEnumerable<PlentyData.Models.Empresa>
@{
    ViewData["Title"] = "Empresa";
}

<h3>@ViewData["Title"]</h3>
<h1></h1>
<h5>Dados Cadastrais</h5>
<hr></hr>
<p>
    <a asp-action="Create" class="btn btn-info btn-sm">Cadastrar Empresa</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayName("Código")
            </th>
            <th>
                @Html.DisplayName("Razão Social")
            </th>
            <th>
                @Html.DisplayName("Nome Fantasia")
            </th>
            <th>
                @Html.DisplayName("CPF/CNPJ")
            </th>
            <th>
                @Html.DisplayName("IE")
            </th>
            <th>
                @Html.DisplayName("Ativo")
            </th>
            <th>
                @Html.DisplayName("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
            </tr>
        }
    </tbody>
</table>



