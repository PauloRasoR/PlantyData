@model IEnumerable<PlentyData.Models.Unidade>
@{
    ViewData["Title"] = "Unidade";
}

<h5>@ViewData["Title"]</h5>
<h1></h1>
<p>Lista</p>
<p style="text-align:right">
    <a asp-action="Create" class="btn btn-info btn-sm">Cadastrar Unidade</a>
</p>
<hr></hr>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-secundary">
            <th>
                @Html.DisplayName("Unidade")
            </th>
            <th>
                @Html.DisplayName("Descrição")
            </th>
            <th style="text-align:center">
                @Html.DisplayName("Ativo")
            </th>
            <th style="text-align:center">
                @Html.DisplayName("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>                
                 <td>
                     @Html.DisplayFor(modelItem => item.Abreviacao)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Nome)
                 </td>
                 <td style="text-align:center">
                     @Html.DisplayFor(modelItem => item.Ativo)
                 </td>
                 <td style="text-align:center">
                 <bottom><a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.Id">Editar</a></bottom>
                 </td>                
            </tr>
        }
    </tbody>
</table>



